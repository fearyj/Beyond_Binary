<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top area with points badge -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Points Badge (top right) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_points_badge"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_coin"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 pts"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>

    </FrameLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <!-- Success Checkmark Icon -->
            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/bg_success_checkmark"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Created! Way to go!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who's joining you? Invite someone who needs a boost today."
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:maxWidth="283dp" />

            <!-- Community List Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_community_card">

                <!-- Card Header -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\uD83D\uDC95 Discover your community \uD83D\uDC95"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#66000000"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <!-- Close button -->
                    <ImageView
                        android:id="@+id/btn_close_community"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_close_circle"
                        android:clickable="true"
                        android:focusable="true" />

                </FrameLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- Community Members RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/community_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <!-- Done Button -->
            <TextView
                android:id="@+id/done_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_done_btn"
                android:text="Done"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
