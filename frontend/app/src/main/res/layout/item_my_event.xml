<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Relative layout so we can position badges absolutely -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:minHeight="@dimen/my_event_min_height">

        <!-- Emoji icon container (left) -->
        <FrameLayout
            android:id="@+id/icon_container"
            android:layout_width="@dimen/my_event_icon_size"
            android:layout_height="@dimen/my_event_icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_event_icon">

            <TextView
                android:id="@+id/event_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_emoji_large"
                android:text="&#x1F9D8;" />

        </FrameLayout>

        <!-- Text content (middle) -->
        <LinearLayout
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_container"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_body_large"
                android:textStyle="bold"
                android:textColor="#000000"
                android:lineSpacingExtra="0dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_body_default"
                android:textColor="#000000"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_body_default"
                android:textColor="#000000"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Category badge (top right) -->
        <TextView
            android:id="@+id/category_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="@dimen/text_size_body_small"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Role badge (bottom right) -->
        <TextView
            android:id="@+id/role_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="@dimen/text_size_body_small"
            android:textStyle="bold"
            android:textColor="#000000" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
