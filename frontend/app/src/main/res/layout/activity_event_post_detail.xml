<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top bar (back arrow) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="12dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            app:tint="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Post Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- Profile pic -->
                <View
                    android:id="@+id/header_profile_pic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/profile_circle_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/post_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sarah.mitchell"
                        android:textSize="13sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Â· "
                        android:textSize="12sp"
                        android:textColor="#8E8E8E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textSize="12sp"
                        android:textColor="#8E8E8E" />

                </LinearLayout>

                <!-- Three dots menu -->
                <ImageButton
                    android:id="@+id/btn_more"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="More options"
                    android:scaleType="centerInside"
                    app:tint="#000000" />

            </LinearLayout>

            <!-- Image Carousel -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/image_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#F5F5F5" />

                <!-- Slide counter badge -->
                <TextView
                    android:id="@+id/slide_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_slide_counter"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="1/5"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </FrameLayout>

            <!-- Dot indicators -->
            <LinearLayout
                android:id="@+id/dot_indicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="4dp" />

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Like"
                    android:scaleType="centerInside"
                    android:padding="4dp" />

                <ImageButton
                    android:id="@+id/btn_comment"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Comment"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Share"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:layout_marginStart="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bookmark"
                    android:scaleType="centerInside"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Likes count -->
            <TextView
                android:id="@+id/likes_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:text="2,542 likes"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Caption -->
            <TextView
                android:id="@+id/caption_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp"
                android:textColor="#1E2939" />

            <!-- View comments -->
            <TextView
                android:id="@+id/view_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:text="View all 87 comments"
                android:textSize="14sp"
                android:textColor="#8E8E8E"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <!-- Add comment row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/profile_circle_background" />

                <EditText
                    android:id="@+id/comment_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:hint="Add a comment..."
                    android:textSize="13sp"
                    android:textColor="#262626"
                    android:textColorHint="#8E8E8E"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:text="2 hours ago"
                android:textSize="11sp"
                android:textColor="#8E8E8E" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
