<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: Back + Title + Share -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_detail_horizontal"
                android:paddingEnd="20dp"
                android:paddingTop="@dimen/header_padding_top"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/icon_size_standard"
                    android:layout_height="@dimen/icon_size_standard"
                    android:src="@drawable/ic_back_arrow"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Event Details"
                    android:textSize="@dimen/text_size_title_screen"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:alpha="0.9"
                    android:layout_marginStart="9dp" />

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/event_detail_share_icon"
                    android:layout_height="@dimen/event_detail_share_icon"
                    android:src="@drawable/ic_share"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Event Image + Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp">

                <!-- Emoji Box -->
                <FrameLayout
                    android:layout_width="@dimen/event_detail_emoji_box_width"
                    android:layout_height="@dimen/event_detail_emoji_box_height"
                    android:background="@drawable/bg_emoji_box_detail">

                    <TextView
                        android:id="@+id/event_detail_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/text_size_emoji_xlarge" />

                </FrameLayout>

                <!-- Title + Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:paddingTop="7dp">

                    <TextView
                        android:id="@+id/event_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Title"
                        android:textSize="@dimen/text_size_title_screen"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/event_detail_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textSize="@dimen/text_size_body_chat_btn"
                        android:textColor="#5669FF"
                        android:background="@drawable/bg_detail_btn_join"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Date Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_detail_horizontal"
                android:paddingEnd="@dimen/spacing_detail_horizontal"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="@dimen/event_detail_icon_box_size"
                    android:layout_height="@dimen/event_detail_icon_box_size"
                    android:background="@drawable/bg_detail_icon_box">

                    <ImageView
                        android:layout_width="@dimen/icon_size_detail_section"
                        android:layout_height="@dimen/icon_size_detail_section"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_detail_calendar" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/event_detail_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 February, 2026"
                        android:textSize="@dimen/text_size_body_large"
                        android:textStyle="bold"
                        android:textColor="#120D26"
                        android:alpha="0.84" />

                    <TextView
                        android:id="@+id/event_detail_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4:00 PM - 6:00 PM"
                        android:textSize="@dimen/text_size_body_chat_btn"
                        android:textColor="#747688" />

                </LinearLayout>

            </LinearLayout>

            <!-- Location Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_detail_horizontal"
                android:paddingEnd="@dimen/spacing_detail_horizontal"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="@dimen/event_detail_icon_box_size"
                    android:layout_height="@dimen/event_detail_icon_box_size"
                    android:background="@drawable/bg_detail_icon_box">

                    <ImageView
                        android:layout_width="@dimen/icon_size_detail_section"
                        android:layout_height="@dimen/icon_size_detail_section"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_detail_location" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/event_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/text_size_body_large"
                        android:textStyle="bold"
                        android:textColor="#120D26"
                        android:alpha="0.84" />

                    <TextView
                        android:id="@+id/event_detail_location_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_body_chat_btn"
                        android:textColor="#747688"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <!-- Participants Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_detail_horizontal"
                android:paddingEnd="@dimen/spacing_detail_horizontal"
                android:layout_marginBottom="32dp">

                <FrameLayout
                    android:layout_width="@dimen/event_detail_icon_box_size"
                    android:layout_height="@dimen/event_detail_icon_box_size"
                    android:background="@drawable/bg_detail_icon_box">

                    <ImageView
                        android:layout_width="@dimen/icon_size_detail_section"
                        android:layout_height="@dimen/icon_size_detail_section"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_detail_users" />

                </FrameLayout>

                <TextView
                    android:id="@+id/event_detail_participants"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/10 Pax"
                    android:textSize="@dimen/text_size_body_large"
                    android:textStyle="bold"
                    android:textColor="#120D26"
                    android:alpha="0.84"
                    android:layout_marginStart="20dp" />

            </LinearLayout>

            <!-- About Event Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_section_horizontal"
                android:paddingEnd="@dimen/spacing_section_horizontal"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Event"
                    android:textSize="@dimen/text_size_title_section"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/event_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event description goes here..."
                    android:textSize="@dimen/text_size_body_medium"
                    android:textColor="#120D26"
                    android:lineSpacingExtra="6dp" />

            </LinearLayout>

            <!-- My Photo Section (shown when photo exists) -->
            <LinearLayout
                android:id="@+id/event_photo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_section_horizontal"
                android:paddingEnd="@dimen/spacing_section_horizontal"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Photo"
                    android:textSize="@dimen/text_size_title_section"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:id="@+id/event_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/event_detail_photo_height"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_detail_icon_box" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_section_horizontal"
                android:paddingEnd="@dimen/spacing_section_horizontal"
                android:paddingBottom="24dp">

                <!-- Join + Invite Row -->
                <LinearLayout
                    android:id="@+id/join_invite_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/btn_join_event"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_weight="1"
                        android:background="@drawable/bg_detail_btn_join"
                        android:text="Join"
                        android:textSize="@dimen/text_size_body_large"
                        android:textStyle="bold"
                        android:textColor="#120D26"
                        android:alpha="0.84"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/btn_invite"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_weight="1"
                        android:background="@drawable/bg_detail_btn_invite"
                        android:text="Invite"
                        android:textSize="@dimen/text_size_body_large"
                        android:textStyle="bold"
                        android:textColor="#120D26"
                        android:alpha="0.84"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- View on Map Button -->
                <LinearLayout
                    android:id="@+id/btn_view_on_map"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_detail_btn_map"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/icon_size_standard"
                        android:layout_height="@dimen/icon_size_standard"
                        android:src="@drawable/ic_detail_map"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Map"
                        android:textSize="@dimen/text_size_body_large"
                        android:textStyle="bold"
                        android:textColor="#120D26"
                        android:alpha="0.84" />

                </LinearLayout>

                <!-- Leave/Cancel Button (shown when joined) -->
                <TextView
                    android:id="@+id/btn_leave_event"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:background="@drawable/bg_detail_btn_leave"
                    android:text="Leave Event"
                    android:textSize="@dimen/text_size_body_large"
                    android:textStyle="bold"
                    android:textColor="#FF4444"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp" />

                <!-- Attendance Buttons (shown when joined from My Events) -->
                <LinearLayout
                    android:id="@+id/attendance_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/btn_attended"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_weight="1"
                        android:background="@drawable/bg_detail_btn_attended"
                        android:text="Attended"
                        android:textSize="@dimen/text_size_body_medium"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/btn_not_attended"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_weight="1"
                        android:background="@drawable/bg_detail_btn_leave"
                        android:text="Not Attended"
                        android:textSize="@dimen/text_size_body_medium"
                        android:textStyle="bold"
                        android:textColor="#FF4444"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

    </LinearLayout>

    <!-- Upload Photo Prompt Overlay -->
    <LinearLayout
        android:id="@+id/upload_prompt_overlay"
        android:layout_width="@dimen/event_detail_upload_prompt_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_upload_prompt_card"
        android:padding="28dp"
        android:elevation="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hope you great time !"
            android:textSize="@dimen/text_size_body_large"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share a photo that captures the heart of this event :)"
            android:textSize="@dimen/text_size_body_default"
            android:textColor="#555555"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/btn_upload_photo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_upload"
            android:background="@drawable/bg_upload_btn"
            android:text="Upload"
            android:textSize="@dimen/text_size_body_standard"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</FrameLayout>
