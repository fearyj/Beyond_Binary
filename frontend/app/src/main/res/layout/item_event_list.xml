<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="21dp"
    android:layout_marginEnd="21dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_event_card_home"
    android:elevation="4dp"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Emoji Icon Box -->
        <FrameLayout
            android:id="@+id/emoji_box"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_emoji_home_blue">

            <TextView
                android:id="@+id/event_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="36sp" />

        </FrameLayout>

        <!-- Event Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <!-- Title + Category Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Event Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/event_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textSize="9sp"
                    android:textColor="#343149"
                    android:background="@drawable/bg_event_action_btn"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Date + Time -->
            <TextView
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 May | Wed | 6:00 PM - 7:00 PM"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginTop="2dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <!-- Participants -->
            <TextView
                android:id="@+id/event_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5/20 Pax"
                android:textSize="10sp"
                android:textColor="#747688"
                android:layout_marginTop="1dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/btn_event_details"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:background="@drawable/bg_event_action_btn"
                    android:text="Event Details"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#343149"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:elevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/btn_view_map"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:background="@drawable/bg_event_action_btn"
                    android:text="View on Map"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#343149"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:elevation="2dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
