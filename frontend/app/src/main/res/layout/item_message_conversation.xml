<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Avatar (round photo) -->
        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="@dimen/message_conversation_avatar_size"
            android:layout_height="@dimen/message_conversation_avatar_size"
            android:scaleType="centerCrop"
            android:contentDescription="Profile photo"
            android:layout_marginEnd="16dp" />

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name + Time row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/message_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_body_standard"
                    android:textStyle="bold"
                    android:textColor="#09090B"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_body_chat_btn"
                    android:textColor="#71717A"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Last Message -->
            <TextView
                android:id="@+id/message_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_body_default"
                android:textColor="#71717A"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider (indented to align with text, not avatar) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E7"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="24dp" />

</LinearLayout>
