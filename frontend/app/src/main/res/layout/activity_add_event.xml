<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_page_horizontal"
            android:paddingEnd="@dimen/spacing_page_horizontal"
            android:paddingTop="@dimen/header_padding_top"
            android:paddingBottom="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textSize="@dimen/text_size_title_screen"
                android:textStyle="bold"
                android:textColor="#09090B"
                android:layout_marginBottom="24dp" />

            <!-- Event Title (filled input) -->
            <EditText
                android:id="@+id/input_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height_standard"
                android:background="@drawable/bg_input_filled"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Event Title"
                android:textColorHint="#313149"
                android:textColor="#313149"
                android:textSize="@dimen/text_size_body_standard"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="12dp" />

            <!-- Event Type (icon + bordered input) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_form"
                    android:layout_height="@dimen/icon_size_form"
                    android:src="@drawable/ic_event_type"
                    android:layout_marginEnd="12dp" />

                <AutoCompleteTextView
                    android:id="@+id/input_event_type"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height_bordered"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="Event Type"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Date (icon + bordered input) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_form"
                    android:layout_height="@dimen/icon_size_form"
                    android:src="@drawable/ic_calendar_add"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/input_date"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height_bordered"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="10 February, 2026"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Time Range (icon + start â†’ end) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_form"
                    android:layout_height="@dimen/icon_size_form"
                    android:src="@drawable/ic_clock"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/input_start_time"
                    android:layout_width="@dimen/input_time_width"
                    android:layout_height="@dimen/input_height_bordered"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="3:00 PM"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="@dimen/icon_size_standard"
                    android:layout_height="@dimen/icon_size_standard"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/input_end_time"
                    android:layout_width="@dimen/input_time_width"
                    android:layout_height="@dimen/input_height_bordered"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="5:00 PM"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Location (icon + bordered input) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_form"
                    android:layout_height="@dimen/icon_size_form"
                    android:src="@drawable/ic_location_pin"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/input_location"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height_bordered"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="Location"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:inputType="text"
                    android:maxLines="1"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Pax / Max Participants (icon + bordered input) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_form"
                    android:layout_height="@dimen/icon_size_form"
                    android:src="@drawable/ic_user_single"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/input_max_participants"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height_bordered"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="25 Pax"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:inputType="number"
                    android:maxLines="1"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Invite Friends (icon + bordered input) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_form"
                    android:layout_height="@dimen/icon_size_form"
                    android:src="@drawable/ic_users_group"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/input_invite_friends"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/input_height_bordered"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_bordered"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="Invite friends"
                    android:textColorHint="#757575"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_body_standard"
                    android:inputType="text"
                    android:maxLines="1"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Description (filled input) -->
            <EditText
                android:id="@+id/input_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/input_min_height_description"
                android:background="@drawable/bg_input_filled"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:hint="Add description"
                android:textColorHint="#313149"
                android:textColor="#313149"
                android:textSize="@dimen/text_size_body_standard"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="20dp" />

            <!-- Create Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_create_event"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_standard"
                    android:paddingStart="56dp"
                    android:paddingEnd="56dp"
                    android:background="@drawable/bg_create_button"
                    android:text="Create"
                    android:textColor="#EBEDFF"
                    android:textSize="@dimen/text_size_body_default"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
