<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_shop_dialog">

    <!-- Dark purple header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_header_height"
        android:background="@drawable/bg_shop_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Shop"
            android:textSize="@dimen/text_size_body_medium"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </FrameLayout>

    <!-- Shop items list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shop_items_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="never" />

    <!-- Close (X) button at the bottom -->
    <FrameLayout
        android:id="@+id/btn_close_shop"
        android:layout_width="@dimen/shop_close_button_size"
        android:layout_height="@dimen/shop_close_button_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_close_btn"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="&#x2715;"
            android:textSize="@dimen/text_size_body_large"
            android:textColor="#FFFFFF" />

    </FrameLayout>

</LinearLayout>
