<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Points Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†100 pts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:padding="8dp"
            android:background="@android:drawable/dialog_holo_light_frame" />

    </LinearLayout>

    <!-- Success Icon -->
    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:text="âœ“"
        android:textSize="72sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/circle_purple"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Success Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Event Created! Way to go!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Who's joining you? Invite someone who\nneeds a boost today."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Community Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ðŸ’• Discover your community ðŸ’•"
        android:textSize="18sp"
        android:textColor="#9575CD"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Community Members List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/community_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="8dp" />

    <!-- Done Button -->
    <Button
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Done"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_marginTop="16dp" />

</LinearLayout>
