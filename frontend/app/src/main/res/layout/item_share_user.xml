<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_content_padding"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- User Emoji/Avatar -->
    <TextView
        android:id="@+id/user_emoji"
        android:layout_width="@dimen/share_user_avatar_size"
        android:layout_height="@dimen/share_user_avatar_size"
        android:gravity="center"
        android:text="&#x1F464;"
        android:textSize="@dimen/text_size_emoji_medium"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_marginEnd="16dp" />

    <!-- User Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- User Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="@dimen/text_size_body_medium"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- User Bio -->
        <TextView
            android:id="@+id/user_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="@dimen/text_size_body_default"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/user_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>
