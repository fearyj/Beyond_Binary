<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing_form_padding">

    <!-- Top spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <!-- Screen title -->
    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Let's get to know you"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_title_large"
        android:textStyle="bold" />

    <!-- Middle spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Question text -->
    <TextView
        android:id="@+id/onboarding_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Question goes here"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_body_large" />

    <!-- Middle spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <!-- Option A button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onboarding_button_height"
        android:text="Option A"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body_medium"
        app:backgroundTint="@color/black"
        app:cornerRadius="28dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="16dp" />

    <!-- Option B button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_b"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onboarding_button_height"
        android:text="Option B"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body_medium"
        app:backgroundTint="@color/black"
        app:cornerRadius="28dp" />

    <!-- Bottom spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
