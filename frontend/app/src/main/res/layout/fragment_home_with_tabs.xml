<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header: App name + search + message icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="21dp"
        android:paddingEnd="16dp"
        android:paddingTop="48dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buddeee"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/itim" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_message_bubble"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Custom Tab Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Personalised Tab -->
        <LinearLayout
            android:id="@+id/tab_personalised"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_tab_active"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_tab_heart"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personalised"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:alpha="0.9"
                android:singleLine="true" />

        </LinearLayout>

        <!-- Recommended Tab -->
        <LinearLayout
            android:id="@+id/tab_recommended"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_tab_inactive"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_tab_list"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- ViewPager2 for tab content + FAB -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Floating Action Button -->
        <FrameLayout
            android:id="@+id/fab_create_event"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_fab_create"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_fab_calendar_plus" />

        </FrameLayout>

    </FrameLayout>

</LinearLayout>
