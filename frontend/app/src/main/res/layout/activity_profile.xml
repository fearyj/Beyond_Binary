<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Purple Header Bar with Buddee title + Sign Out -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="#343149">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Buddeee"
            android:textSize="@dimen/profile_header_text_size"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/itim" />

        <ImageView
            android:id="@+id/btn_sign_out"
            android:layout_width="@dimen/profile_sign_out_icon"
            android:layout_height="@dimen/profile_sign_out_icon"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_sign_out"
            android:padding="7dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </FrameLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_height"
        android:layout_marginBottom="@dimen/bottom_nav_margin"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Info Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp">

                <!-- Profile Photo with Edit Overlay -->
                <FrameLayout
                    android:id="@+id/profile_photo_container"
                    android:layout_width="@dimen/profile_photo_size"
                    android:layout_height="@dimen/profile_photo_size"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="@dimen/profile_photo_size"
                        android:layout_height="@dimen/profile_photo_size"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_circle_background"
                        android:padding="@dimen/profile_photo_padding" />

                    <!-- Edit overlay button -->
                    <FrameLayout
                        android:id="@+id/btn_edit_photo"
                        android:layout_width="@dimen/profile_edit_overlay_size"
                        android:layout_height="@dimen/profile_edit_overlay_size"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_edit_photo_overlay"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/profile_edit_overlay_icon"
                            android:layout_height="@dimen/profile_edit_overlay_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit_pencil" />

                    </FrameLayout>

                </FrameLayout>

                <!-- Right side: Name + Stats + Bio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_photo_container"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <!-- Name -->
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_body_standard"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="6dp" />

                    <!-- Stats Row (numbers + labels) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <!-- Stat 1 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/events_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_size_body_standard"
                                android:textStyle="bold"
                                android:textColor="#212121" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Events"
                                android:textSize="@dimen/text_size_label_small"
                                android:textColor="#757575" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/profile_stat_divider_height"
                            android:background="#E0E0E0" />

                        <!-- Stat 2 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/hosted_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_size_body_standard"
                                android:textStyle="bold"
                                android:textColor="#212121" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hosted"
                                android:textSize="@dimen/text_size_label_small"
                                android:textColor="#757575" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/profile_stat_divider_height"
                            android:background="#E0E0E0" />

                        <!-- Stat 3 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/friends_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_size_body_standard"
                                android:textStyle="bold"
                                android:textColor="#212121" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Friends"
                                android:textSize="@dimen/text_size_label_small"
                                android:textColor="#757575" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bio -->
                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_detail"
                        android:textColor="#333333"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Edit Profile Button (smaller) -->
            <TextView
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_edit_profile"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_edit_profile_btn"
                android:text="Edit Profile"
                android:textSize="@dimen/text_size_body_small"
                android:textStyle="bold"
                android:textColor="#343149"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- Personality / Interest Tags -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tags_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:justifyContent="flex_start">

                <!-- Tags populated programmatically -->

            </com.google.android.flexbox.FlexboxLayout>

            <!-- Gallery / Profile Tab Bar (Instagram style, below tags) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_tab_bar"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:background="#343149">

                <!-- Grid Tab (active by default) -->
                <FrameLayout
                    android:id="@+id/tab_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#343149"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/tab_grid_icon"
                        android:layout_width="@dimen/icon_size_standard"
                        android:layout_height="@dimen/icon_size_standard"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_grid_active" />

                </FrameLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#4A475E" />

                <!-- Person Tab -->
                <FrameLayout
                    android:id="@+id/tab_person"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/tab_person_icon"
                        android:layout_width="@dimen/icon_size_standard"
                        android:layout_height="@dimen/icon_size_standard"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person_outline" />

                </FrameLayout>

            </LinearLayout>

            <!-- Photo Grid Content -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photo_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:background="#FFFFFF"
                android:padding="2dp" />

            <!-- Person Tab Content: Achievement Neighborhood View (hidden by default) -->
            <FrameLayout
                android:id="@+id/person_tab_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:clipChildren="true"
                android:clipToPadding="true">

                <!-- Green Map Background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3EBE7A" />

                <!-- === ROAD PAIR 1 (upper crossing) === -->
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="60dp"
                    android:rotation="-22"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="60dp"
                    android:rotation="22"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_dashed_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="70dp"
                    android:rotation="-22"
                    android:background="@drawable/bg_road_dashed" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_dashed_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="70dp"
                    android:rotation="22"
                    android:background="@drawable/bg_road_dashed" />

                <!-- === ROAD PAIR 2 (middle crossing at traffic light) === -->
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="210dp"
                    android:rotation="-22"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="210dp"
                    android:rotation="22"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_dashed_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="220dp"
                    android:rotation="-22"
                    android:background="@drawable/bg_road_dashed" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_dashed_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="220dp"
                    android:rotation="22"
                    android:background="@drawable/bg_road_dashed" />

                <!-- === ROAD PAIR 3 (lower crossing) === -->
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_height"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="30dp"
                    android:rotation="-22"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_height"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="30dp"
                    android:rotation="22"
                    android:background="#FFFFFF" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_dashed_height"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="40dp"
                    android:rotation="-22"
                    android:background="@drawable/bg_road_dashed" />
                <View
                    android:layout_width="@dimen/achievement_road_width"
                    android:layout_height="@dimen/achievement_road_dashed_height"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="40dp"
                    android:rotation="22"
                    android:background="@drawable/bg_road_dashed" />

                <!-- Small House (upper-right corner, further apart) -->
                <ImageView
                    android:layout_width="@dimen/achievement_house_small_width"
                    android:layout_height="@dimen/achievement_house_small_height"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="-55dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/img_house_small"
                    android:scaleType="fitCenter"
                    android:contentDescription="Small house" />

                <!-- Large House with car (center-left, upper area) -->
                <ImageView
                    android:layout_width="@dimen/achievement_house_large_width"
                    android:layout_height="@dimen/achievement_house_large_height"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_house_large"
                    android:scaleType="fitCenter"
                    android:contentDescription="House" />

                <!-- User Name Label (below the house, black + smaller) -->
                <TextView
                    android:id="@+id/achievement_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="175dp"
                    android:text=""
                    android:textSize="@dimen/achievement_username_text_size"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3" />

                <!-- Traffic Light (center, at road intersection, slightly larger) -->
                <ImageView
                    android:layout_width="@dimen/achievement_traffic_light_width"
                    android:layout_height="@dimen/achievement_traffic_light_height"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/ic_traffic_light"
                    android:scaleType="fitCenter"
                    android:contentDescription="Traffic light" />

                <!-- Shopping Bag FAB (bottom-right) -->
                <FrameLayout
                    android:id="@+id/fab_shopping"
                    android:layout_width="@dimen/achievement_fab_size"
                    android:layout_height="@dimen/achievement_fab_size"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_fab_achievement"
                    android:elevation="6dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="@dimen/icon_size_standard"
                        android:layout_height="@dimen/icon_size_standard"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_shopping_bag"
                        android:contentDescription="Shopping bag" />

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
